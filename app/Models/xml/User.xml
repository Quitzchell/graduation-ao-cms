<model>

    <configuration>
        <title>Gebruikers</title>
        <titleOne>Gebruiker</titleOne>
        <icon>fa fa-user</icon>
    </configuration>

    <fields timestamps="true" softdeletes="true">
        <field name="username" title="Gebruikersnaam" type="text" maxlength="255" />
        <field name="password" title="Wachtwoord" type="password" maxlength="120" />
        <field name="fullname" default="true" title="Volledige naam" type="text" maxlength="255" />
        <field name="email" title="E-mailadres" type="text" maxlength="255" />
        <field name="submit" title="Inloggen" value="Inloggen" type="submit" class="btn btn-lg btn-login btn-block" />
        <field name="two_factor_authentication_enabled" title="2FA geactiveerd" type="text" />
        <field name="two_factor_authentication_token" title="2FA code" type="text" maxlength="6"/>
    </fields>

    <lists>
        <list name="default" sort="fullname" sortOrder="ASC">
            <field name="username" />
            <field name="fullname" />
            <field name="email" />
        </list>
        <list name="add" sort="fullname" sortOrder="ASC">
            <field name="username" />
            <field name="password" />
            <field name="fullname" />
            <field name="email" />
        </list>
        <list name="edit" sort="fullname" sortOrder="ASC">
            <field name="username" />
            <field name="fullname" />
            <field name="email" />
        </list>
        <list name="info" sort="fullname" sortOrder="ASC">
            <field name="username" />
            <field name="fullname" />
            <field name="email" />
        </list>
        <list name="register">
            <field name="username" />
            <field name="password" />
            <field name="fullname" />
            <field name="email" />
        </list>
        <list name="login">
            <field name="username" />
            <field name="password" />
            <field name="submit" />
        </list>
        <list name="login-2fa">
            <field name="username" />
            <field name="password" />
            <field name="two_factor_authentication_token"/>
            <field name="submit" />
        </list>
        <list name="quickview">
            <field name="fullname" />
            <field name="email" />
        </list>
        <list name="overview">
            <field name="fullname" />
            <field name="email" />
        </list>
    </lists>

</model>
