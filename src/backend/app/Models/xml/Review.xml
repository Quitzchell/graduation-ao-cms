<model>
    <configuration>
        <title>Reviews</title>
        <titleOne>Review</titleOne>
        <icon>fa fa-gavel</icon>
    </configuration>

    <fields>
        <!-- General fields-->
        <field type="text" name="title" title="Title"/>
        <field type="textarea" name="excerpt" title="Excerpt"/>
        <field type="number" name="score" title="Score" max="10" min="0"/>

        <!-- Review fields -->
        <field type="edit-relation" name="books" title="Book"
               relation_on="App\Models\Book" relation_name="title"
               col="6" max="1"/>
        <field type="edit-relation" name="movies" title="Movie"
               relation_on="Movie" relation_name="title"
               col="6" max="1"/>
    </fields>

    <lists>
        <list name="default">
            <field name="score"/>
        </list>
        <list name="add">
            <field name="title"/>
            <field name="books"/>
            <field name="movies"/>
            <field name="excerpt"/>
            <field name="score"/>
        </list>
        <list name="edit">
            <field name="title"/>
            <field name="books"/>
            <field name="movies"/>
            <field name="excerpt"/>
            <field name="score"/>
        </list>
        <list name="info">
            <field name="title"/>
            <field name="score"/>
        </list>
    </lists>
</model>
