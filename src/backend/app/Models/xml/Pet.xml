<model>
    <configuration>
        <title>Pets</title>
        <titleOne>Pet</titleOne>
        <icon>fa fa-paw</icon>
    </configuration>

    <fields>
        <!-- Pet information -->
        <field type="text" name="name" title="Name"/>

        <!-- Relations -->
        <field type="tags" name="owners" title="Owner"
               relation_on="App\Models\Person" relation_name="full_name"
               order_by="name"/>

        <!-- General -->
        <field type="select" name="active" title="Active"
               options="config:options.boolean" value="1"/>

        <!-- Dynamic-->
        <field type="dynamic" name="owner_names" title="Owner(s)"/>
    </fields>

    <lists>
        <list name="overview">
            <field name="name"/>
            <field name="owner_names"/>
        </list>

        <list name="info">
            <field name="name"/>
            <field name="owner_names"/>
        </list>

        <list name="add">
            <field name="name"/>
            <field name="owners"/>
        </list>

        <list name="edit">
            <field name="name"/>
            <field name="owners"/>
        </list>
    </lists>
</model>
